@{
    Layout = "_LayoutVazio";
}

<div align="center" style="margin-top:20%;">
    <h1>Esqueci a senha</h1>
</div>



<form asp-controller="Login" asp-action="Index" method="post">
    <div class="form-group" align="center">
        <label for="BxUsuario">Usuário</label>
        <input type="text" class="form-control" id="BxUsuario" placeholder="Insira seu usuário" style="width:30%">
    </div>
    <div class="form-group" align="center">
        <label for="BxCpf">CPF</label>
        <input type="text" class="form-control" id="BxCpf" placeholder="Insira seu cpf" style="width:30%">
    </div>
    <div align="center" style="margin-top:10px;">
        <button type="submit" class="btn btn-primary">Enviar confirmação</button>
    </div>
</form>