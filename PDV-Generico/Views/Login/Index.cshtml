@{
    Layout = "_LayoutVazio";
}

<div align="center">
    <h1>Login em PDV Genérico</h1>
</div>



<form asp-controller="Login" asp-action="ChecarLogin" method="post">
    <div class="form-group">
        <label for="BxUsuario">Usuário</label>
        <input type="text" class="form-control" id="BxUsuario" placeholder="Insira seu usuário">
    </div>
    <div class="form-group">
        <label for="BxUsuario">Senha</label>
        <input type="password" class="form-control" id="BxSenha" placeholder="Insira sua senha">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="BxConectado">
        <label class="form-check-label" for="BxConectado">Manter conectado</label>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<p align="center"><a href="url">Esqueci a senha.</a><p>